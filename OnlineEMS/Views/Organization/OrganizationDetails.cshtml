@{
    Layout = "~/Views/Dashboard/Dashboard.cshtml";
}




<div class="box span12">
    <div class="box-header" data-original-title>
        <h2><i class="halflings-icon user"></i><span class="break"></span>Organization Information</h2>
        <div class="box-icon">
            <a href="#" class="btn-setting"><i class="halflings-icon wrench"></i></a>
            <a href="#" class="btn-minimize"><i class="halflings-icon chevron-up"></i></a>
            <a href="#" class="btn-close"><i class="halflings-icon remove"></i></a>
        </div>
    </div>
    <div class="box-content">
        
        <label for="Name" class="col-md-6">
            @if (ViewBag.Msg == "Success")
            {
                <span style="color: green" class="text-center">Successfully Deleted One Item!</span>
            }
            else if (ViewBag.Msg == "Failed")
            {
                <span style="color: red" class="text-center"> Sorry Execution failed!</span>
            }
        </label>



        <table class="table table-striped table-bordered bootstrap-datatable datatable">
            <thead>
            <tr>
                <th>SL</th>
                <th>Organization Name</th>
                <th>Code</th>
                <th>Address</th>
                <th>Contact No</th>
                <th>About</th>
                <th>Logo Name</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>

            @if (Model != null && Model.Organizations != null && Model.Organizations.Count > 0)
            {
                int i = 1;

                foreach (var organization in Model.Organizations)
                {
                    <tr>
                        <td>@(i++)</td>
                        <td>@organization.Name</td>
                        <td class="center">@organization.Code</td>
                        <td class="center" width="150">@organization.Address</td>
                        <td class="center">@organization.ContactNo</td>
                        <td class="center">@organization.About</td>
                        <td class="center">@organization.LogoName</td>
                        <td class="center" width="200">
                            <a class="btn btn-success" href="/Organization/Details/@organization.Id">
                                <i class="halflings-icon white zoom-in"></i>
                            </a>
                            <a class="btn btn-info" href="/Organization/Edit/@organization.Id">
                                <i class="halflings-icon white edit"></i>
                            </a>
                            <a class="btn btn-danger" href="/Organization/Delete/@organization.Id">
                                <i class="halflings-icon white trash"></i>
                            </a>
                        </td>
                    </tr>
                }

            }




            </tbody>

        </table>


    </div>
</div><!--/span-->
